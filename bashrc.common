#
# ~/.bashrc.common
#

alias wortel='sudo su -'

[ -r ~/.bashrc.`hostname -s` ] && . ~/.bashrc.`hostname -s`

alias cp='cp -vi'
alias mv='mv -vi'
alias rm='rm -vi'

alias ls='ls -F'
alias l='ls -lF'
alias la='ls -laF'
alias ll='ls -lAF'

[ -d ~/.bashrc-enabled.d ] && for F in ~/.bashrc-enabled.d/*; do source $F; done
